{
	"manifest_version": 2,

	"name": "Lorem Clipsum",
	"description": "A simple Google Chrome extension for generating placeholder text.",
	"version": "1.0.2",

	"icons": {
		"16": "icons/icon16.png",
		"32": "icons/icon32.png",
		"48": "icons/icon48.png"
	},

	"browser_action": {},

	"background": {
		"scripts": ["scripts/background.js"],
		"persistent": false
	},

	"permissions": [
		"contextMenus",
		"storage",
		"activeTab"
	],

	"web_accessible_resources": [
		"main.css",

		"icons/clip-icon.svg",
		"icons/gear-icon.svg",
		"icons/copy-icon.svg"
	]
}
